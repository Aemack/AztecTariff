@page "/Settings"
@using AztecTariff.Models;
@using Telerik.FontIcons;
@inject Settings settings
<div class="position-absolute  bottom-0 end-0 m-4">
    <button class="btn btn-primary" style="border-radius:10px;" onclick="@SaveSettingsToXML"> <TelerikFontIcon Icon="FontIcon.Save"></TelerikFontIcon> </button>
</div>
<div class="p-2 h-100 d-flex justify-content-center align-items-center">
    <div class="mybs" style="height:95%;width:95%;border-radius:10px;">
        <div class="m-5">
            <div class="row">
                <h3 class="heading">Settings</h3>
            </div>
            <div class="d-flex flex-row justify-content-around">
                <div class="w-100">
                    <div class="my-3 mx-2 w-90 border p-2 border-primary" style="border-radius:3px;">
                        <div class="row my-2">
                            <div class="subheading">
                                API Settings
                            </div>
                        </div>
                        <div class="row my-2">
                            <div class="col">
                                <p class="settings-label">API Address:</p>
                            </div>
                            <div class="col-9">
                                <TelerikTextBox/>
                            </div>
                        </div>
                        <div class="row my-2">
                            <div class="col">
                                <p class="settings-label">API Username:</p>
                            </div>
                            <div class="col-9">
                                <TelerikTextBox />
                            </div>
                        </div>
                        <div class="row my-2">
                            <div class="col">
                                <label>API Password:</label>
                            </div>
                            <div class="col-9">
                                <TelerikTextBox />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="w-100">
                    <div class="my-3 mx-2 w-90 p-2 border border-primary" style="border-radius:3px;">
                        <div class="row my-2">
                            <div class="col">
                                <div class="subheading">PDF Settings</div>
                            </div>
                        </div>
                        <div class="row my-2">
                            <div class="col">
                                <p class="settings-label">Footer Message:</p>
                            </div>
                            <div class="col">
                                <TelerikTextBox @bind-Value="footerMessage" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
@code {
    string footerMessage;
    public void SaveSettingsToXML()
    {
        settings.FooterMessage = footerMessage;

    }
}
